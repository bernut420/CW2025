<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<Pane fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml"
      style="-fx-background-color: #2b2b2b;">

    <!-- Scoreboard -->
    <HBox spacing="20" style="-fx-padding: 10;" layoutX="10" layoutY="10">
        <Label fx:id="scoreLabel" text="Score: 0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <Label fx:id="levelLabel" text="Level: 1" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <Label fx:id="linesLabel" text="Lines: 0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
    </HBox>

    <!-- Game Area -->
    <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutX="40" layoutY="50"/>

    <!-- Brick Panel (for current falling brick) -->
    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>

    <!-- Notifications and Game Over -->
    <Group fx:id="groupNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>
